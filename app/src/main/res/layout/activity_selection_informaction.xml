<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectionInformactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a sport before to continue"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select an action"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle" />
        <Button
            android:id="@+id/verUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:text="See Users"
            android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"/>
        <Button
            android:id="@+id/verMeetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/common_google_signin_btn_text_light_focused"
            android:text="See Meetings"
            android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>